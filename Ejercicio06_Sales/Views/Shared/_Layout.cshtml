<!DOCTYPE html>
<html lang="es">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title >@ViewData["Title"] - Ejercicio06 Ventas</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ejercicio06_Sales.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark bg-black border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ejercicio06 Ventas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Products" asp-action="Index">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="SalesOrderDetails" asp-action="Index">Detalle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="SalesOrderHeaders" asp-action="Index">Cabecera</a>
                    </li>
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Listados
                        </a>
                        <ul class="dropdown-menu ">
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="IndexListado01">Listado01</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="IndexListado02">Listado02</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="IndexListado03">Listado03</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="IndexListado04">Listado04</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="ListadoVentasProductos">Listado Ventas Productos</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="SalesOrderDetails" asp-action="ListadoVentasAgrupadoPorColor">Listado Ventas Productos Agrupador por Color</a></li>
                            
                            
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<p></p>
    <div class="container mt-5 pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Ejercicio06 Ventas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
